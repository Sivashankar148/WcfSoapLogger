<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>



  <system.serviceModel>

    <services>
      <service name="Service.Database" behaviorConfiguration="databaseBehavior">
        <host>
          <baseAddresses>
            <add baseAddress="http://localhost:62060/Service" />
          </baseAddresses>
        </host>
        <endpoint address="" binding="customBinding" bindingConfiguration="databaseBinding" bindingNamespace="http://wcf-soap-logger.org/database" contract="Service.IDatabase" />
        <endpoint address="mex" binding="mexHttpBinding" contract="IMetadataExchange" />
      </service>
    </services>


    <bindings>
      <customBinding>
        <binding name="databaseBinding" receiveTimeout="00:10:00" sendTimeout="00:10:00" openTimeout="00:10:00" closeTimeout="00:10:00">
          <soapLogger logPath="C:\SoapLogDefaultService"  />
          <httpTransport />
        </binding>
      </customBinding>
    </bindings>


    <behaviors>
      <serviceBehaviors>
        <behavior name="databaseBehavior">
          <serviceMetadata httpGetEnabled="true" httpsGetEnabled="true"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>
    </behaviors>


    <extensions>
      <bindingElementExtensions>
        <add name="soapLogger" type="WcfSoapLogger.EncodingExtension.ExtensionElement, WcfSoapLogger" />
      </bindingElementExtensions>
    </extensions>

    <protocolMapping>
      <add binding="basicHttpsBinding" scheme="https" />
    </protocolMapping>

    <serviceHostingEnvironment aspNetCompatibilityEnabled="true" multipleSiteBindingsEnabled="true" />
  </system.serviceModel>
  
</configuration>